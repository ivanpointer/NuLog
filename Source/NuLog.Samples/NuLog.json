{
    "targets": [{
        "name": "console",
        "type": "NuLog.Targets.ConsoleTarget",
        "colorRules": [{
            "tags": ["red", "error", "fail*"],
            "color": "White",
            "background": "Red"
        }]
    }],
    "rules": [{
        "include": ["*"],
        "writeTo": ["console"],
        "final": false
    }],
    "watch": true
}